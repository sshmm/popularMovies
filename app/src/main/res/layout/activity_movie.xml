<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MovieActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/movie_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/medium_dim"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="@dimen/small_margin"
            android:background="#018786"
            android:gravity="center_vertical"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/header_size" />

        <ImageView
            android:id="@+id/movie_poster"
            android:layout_width="@dimen/medium_dim"
            android:layout_height="@dimen/large_dim"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/movie_title"
            android:layout_marginTop="@dimen/small_margin"
            android:contentDescription="@string/movie_thumbnail"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/movie_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/movie_title"
            android:layout_marginStart="@dimen/image_to_text"
            android:layout_marginTop="@dimen/small_margin"
            android:layout_toEndOf="@+id/movie_poster"
            android:textSize="@dimen/normal_size" />

        <TextView
            android:id="@+id/movie_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/movie_year"
            android:layout_marginStart="@dimen/image_to_text"
            android:layout_toEndOf="@+id/movie_poster"
            android:textSize="@dimen/normal_size" />

        <TextView
            android:id="@+id/movie_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/movie_poster"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="@dimen/image_to_text"
            android:layout_marginStart="@dimen/image_to_text"
            android:layout_marginTop="@dimen/medium_margin" />
    </RelativeLayout>
</ScrollView>